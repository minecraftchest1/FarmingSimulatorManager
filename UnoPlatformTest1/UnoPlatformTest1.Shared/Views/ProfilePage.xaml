	<StackPanel Orientation="Vertical">
		<StackPanel Orientation="Vertical">
			<TextBlock Text="Saves" HorizontalAlignment="Center"/>
			<StackPanel Orientation="Horizontal">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition/>
						<RowDefinition/>
						<RowDefinition/>
						<RowDefinition/>
						<RowDefinition/>
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>
					<TextBlock  Grid.Row="0"    Grid.Column="0" Height="30" Width="150" HorizontalAlignment="Left"  VerticalAlignment="Center"  Text="Save Slot"/>
					<ComboBox   Grid.Row="0"    Grid.Column="1" Height="30" Width="100" HorizontalAlignment="Left"  VerticalAlignment="Center"  Text="Save Slot" SelectedIndex="0" ItemsSource="{x:Bind save_slots}"/>
					<TextBlock  Grid.Row="1"    Grid.Column="0" Height="30" Width="150" HorizontalAlignment="Left"  VerticalAlignment="Center"  Text="Save Slot"/>
					<TextBox    Grid.Row="1"    Grid.Column="1" Height="30" Width="100" HorizontalAlignment="Left"  VerticalAlignment="Center"  Text="My Save"/>
					<TextBlock  Grid.Row="2"    Grid.Column="0" Height="30" Width="150" HorizontalAlignment="Left"  VerticalAlignment="Center"  Text="Map"/>
					<TextBlock  Grid.Row="2"    Grid.Column="1" Height="30" Width="100" HorizontalAlignment="Left"  VerticalAlignment="Center"  Text="Elmcreek Better Farms"/>
					<TextBlock  Grid.Row="3"    Grid.Column="0" Height="30" Width="150" HorizontalAlignment="Left"  VerticalAlignment="Center"  Text="Farm"/>
					<ComboBox   Grid.Row="3"    Grid.Column="1" Height="30" Width="100" HorizontalAlignment="Left"  VerticalAlignment="Center"  ItemsSource="{x:Bind farms}" SelectedIndex="0"/>
					<TextBlock  Grid.Row="4"    Grid.Column="0" Height="30" Width="150" HorizontalAlignment="Left"  VerticalAlignment="Center"  Text="Money"/>
					<TextBox    Grid.Row="4"    Grid.Column="1" Height="30" Width="100" HorizontalAlignment="Left"  VerticalAlignment="Center"  Text="50000" InputScope="Number" BeforeTextChanging="TextBox_OnBeforeTextChanging"/>
				</Grid>
				<StackPanel x:Name="ModsList" Orientation="Vertical">
					<StackPanel Orientation="Horizontal">
						<Border BorderThickness="2" BorderBrush="Black" Width="200">
							<TextBlock Text="Name" HorizontalAlignment="Center"/>
						</Border>
						<Border BorderThickness="2" BorderBrush="Black" Width="65">
							<TextBlock Text="Version" HorizontalAlignment="Center"/>
						</Border>
						<Border BorderThickness="2" BorderBrush="Black" Width="65">
							<TextBlock Text="Enabled" HorizontalAlignment="Center"/>
						</Border>
					</StackPanel>
					
				</StackPanel>
			</StackPanel>
		</StackPanel>
	</StackPanel>
</Page>
